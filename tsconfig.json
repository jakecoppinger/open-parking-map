{
  "lib": ["es6"],
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["dom", "es6"],
    "target": "ES6",
    "noImplicitAny": true,
    "pretty": true,
    "sourceRoot": "./src/",
    "rootDir": "./src/",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "typeRoots" : ["node_modules/@types", "src/types"]
  },
  "include": ["src/parking/*.ts", "src/utils/*.ts", "src/types/images.d.ts"]
}
